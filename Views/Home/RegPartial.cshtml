@model User
<form asp-action="Register" asp-controller="Home" method="post">
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="FirstName"></label>
        </div>
        <div class="col-7">
            <span asp-validation-for="FirstName"></span>
            <input asp-for="FirstName" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="LastName"></label>
        </div>
        <div class="col-7">
            <span asp-validation-for="LastName"></span>
            <input asp-for="LastName" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="Email"></label>
        </div>
        <div class="col-7">
            <span asp-validation-for="Email"></span>
            <input asp-for="Email" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="Password"></label>
        </div>
        <div class="col-7">
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="ConfirmPW"></label>
        </div>
        <div class="col-7">
            <span asp-validation-for="ConfirmPW"></span>
            <input asp-for="ConfirmPW" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row pt-3">
        <div class="col">
            <input type="submit" value="Sign Up!" class="btn btn-outline-info">
        </div>
    </div>



</form>